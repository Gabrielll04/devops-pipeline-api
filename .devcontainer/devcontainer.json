{
  "name": "DevOps Go + Terraform Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "hashicorp.terraform",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "go version && terraform version && docker --version"
}
